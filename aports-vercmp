local db = require("db")
local check = require("check")
local output = require("output")

function dbg(msg)
	if DEBUG then
		io.stderr:write("DEBUG: "..msg.."\n")
	end
end

DEBUG = false
LIMIT = 0
do
	local i = 1
	while i <= #arg do
		if arg[i] == "-d" then
			DEBUG = true
		elseif arg[i] == "-l" then
			i = i + 1
			LIMIT = tonumber(arg[i])
		end

		i = i + 1
	end
end

local start = os.time()

local aportdb = db.open("main")

output.write(check.start(aportdb, LIMIT), aportdb, start)
